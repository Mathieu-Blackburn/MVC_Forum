@model TP2_Mathieu_Blackburn_Rogers.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nom de la catégorie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatNom)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.CatDescription)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (Model.CatImages == "" || Model.CatImages is null)
            {
                <p></p>
            }
            else
            {
                <p>Model.CatImages</p>
            }
        </dd>
        <dt class = "col-sm-2">
            État de la catégorie
        </dt>
        <dd class="col-sm-10">
            @if (Model.CatActive == true)
            {
                <p>Active</p>
            }
            else
            {
                <p>Inactive</p>
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.CatId">Edit |</a>
    }

    <a asp-action="Index">Back to List</a>
</div>
