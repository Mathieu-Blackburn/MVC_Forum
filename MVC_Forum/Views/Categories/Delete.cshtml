@model TP2_Mathieu_Blackburn_Rogers.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nom de la Catégorie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatNom)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.CatDescription)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (Model.CatImages == "" || Model.CatImages is null)
            {
                <p></p>
            }
            else
            {
                <p>Model.CatImages</p>
            }
        </dd>
        <dt class = "col-sm-2">
            État de la catégorie
        </dt>
        <dd class="col-sm-10">
            @if (Model.CatActive == true)
            {
                <p>Active</p>
            }
            else
            {
                <p>Inactive</p>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CatId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
